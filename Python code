def fetch_weather_forecast(api_key, city): 
base_url = "https://api.openweathermap.org/data/2.5/forecast" 
params = { 
"q": city, 
"units": "metric", 
"cnt": 40, 
"appid": api_key 
} 
response = requests.get(base_url, params=params) 
if response.status_code == 200: 
data = response.json() 
forecasts = parse_weather_forecast(data) 
return forecasts 
else: 
print(f"Failed to fetch data: {response.status_code}") 
return None 
def parse_weather_forecast(data): 
forecasts = [] 
for forecast in data['list']: 
timestamp = forecast['dt'] 
date = datetime.utcfromtimestamp(timestamp) 
temperature = forecast['main']['temp'] 
description = forecast['weather'][0]['description'] 
forecasts.append({ 
'date': date, 
'temperature': temperature, 
'description': description 
}) 
return forecasts 
def print_forecasts(forecasts): 
for forecast in forecasts: 
print(f"{forecast['date'].strftime('%Y-%m-%d %H:%M:%S')}: " 
f"{forecast['temperature']}Â°C, {forecast['description']}") 
